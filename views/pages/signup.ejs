<!-- views/signup.ejs -->
<!doctype html>
<html>

<head>
    <%- include ("../partials/head") %>
    <style>
        .container {
            padding-top: 80px;
            max-width: 300px;
            margin: auto;
        }

        svg {
            vertical-align: bottom;
        }
    </style>
</head>

<body>
    <%- include ("../partials/header") %>
    <div class="container col-sm-6 offset-sm-3">

        <h1><svg class="bi bi-person" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                    d="M13 14s1 0 1-1-1-4-6-4-6 3-6 4 1 1 1 1h10zm-9.995-.944v-.002.002zM3.022 13h9.956a.274.274 0 00.014-.002l.008-.002c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664a1.05 1.05 0 00.022.004zm9.974.056v-.002.002zM8 7a2 2 0 100-4 2 2 0 000 4zm3-2a3 3 0 11-6 0 3 3 0 016 0z"
                    clip-rule="evenodd" />
            </svg> Signup</h1>

        <hr>
        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
            <div class="form-group">
                <label class="sr-only">EUID</label>
                <input type="text" class="form-control" name="euid" placeholder="EUID">
            </div>
            <div class="form-group">
                <label class="sr-only">Name</label>
                <input type="text" class="form-control" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label class="sr-only">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <div class="form-group">
                <label class="sr-only">Magic Words</label>
                <input type="text" class="form-control" name="magic" placeholder="Magic Words...">
            </div>
            <div class="form-group">
                <label class="sr-only">Email</label>
                <input type="text" class="form-control" name="email" placeholder="Email">
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="superAdmin">
                <label class="form-check-label" for="exampleCheck1">Super Admin?</label>
              </div>

            <button type="submit" class="btn btn-lg btn-primary btn-block">Signup</button>
        </form>

        <hr>

        <p>Already have an account? <a href="/login">Login</a></p>

    </div>
</body>

</html>