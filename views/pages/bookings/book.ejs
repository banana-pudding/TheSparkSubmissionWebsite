<!-- views/index.ejs -->
<!doctype html>
<html>

<head>
    <%- include ("../../partials/head") %>
    <link type="text/css" rel="stylesheet" href="../../public/css/submit.css">
    <script src="/public/js/booking.js"></script>
</head>

<body>
    <%- include ("../../partials/header") %>
    <div class="container col-sm-5">
            <div class="card">
                <div class="card-body">
                    <h1 class="pgTitle"><svg class="bi bi-pencil-square" width="1em" height="1em" viewBox="0 0 16 16"
                        fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path
                            d="M15.502 1.94a.5.5 0 010 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 01.707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 00-.121.196l-.805 2.414a.25.25 0 00.316.316l2.414-.805a.5.5 0 00.196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd"
                            d="M1 13.5A1.5 1.5 0 002.5 15h11a1.5 1.5 0 001.5-1.5v-6a.5.5 0 00-1 0v6a.5.5 0 01-.5.5h-11a.5.5 0 01-.5-.5v-11a.5.5 0 01.5-.5H9a.5.5 0 000-1H2.5A1.5 1.5 0 001 2.5v11z"
                            clip-rule="evenodd" />
                    </svg> New Booking Request</h1>
        
                    <!-- show any messages that come back with authentication -->
                    <% if (message.length > 0) { %>
                    <div class="alert alert-success"><%= message %></div>
                    <% } %>
            
                    <!-- SUBMISSION FORM -->
                    <form id="submission-form" action="/submitbooking" method="post">
            
                        <div class="form-group no-margin">
                            <label>Patron Info</label>
                            <div class="input-group">
                                <input type="text" class="form-control top" name="first" placeholder="First name" required>
                                <input type="text" class="form-control top" name="last" placeholder="Last name" required>
                            </div>
                        </div>
                        <div class="form-group no-margin">
                            <input type="email" class="form-control inner" name="email" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control euid bottom" name="euid" placeholder="EUID" required>
                        </div>

                        <hr>
                        <div class="form-group form-row mb-0">
                            <div class="col">
                                <label for="startDate">Pickup On</label>
                            </div>
                            <div class="col">
                                <label for="endDate">Return On</label>
                            </div>
                        </div>
                        <div class="form-group form-row">
                            <div class="col">
                                <input type="date" id="startDate" name="startDate" class="form-control">
                            </div>
                            <div class="col">
                                <input type="date" id="endDate" name="endDate" class="form-control" readonly>
                            </div>
                        </div>
                        <hr>
                        <div class="form-group">
                            <label for="availableCameras" class="mb-3">
                                Please select one camera and up to two lenses that are available during the time you selected
                            </label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">Camera</span>
                                </div>
                                <select class="form-control" id="availableCameras" name="camera">
                                    <option>No cameras available for this date</option>
                                </select>
                            </div>
                            
                        </div>
                        <div class="form-group form-row">
                            <div class="col input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">Lens 1</span>
                                  </div>
                                <select class="form-control" id="availableLenses1" name="lens1">
                                    <option>No lenses available for this date</option>
                                </select>
                            </div>
                            <div class="col input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">Lens 2</span>
                                  </div>
                                <select class="form-control" id="availableLenses2" name="lens2">
                                    <option>No lenses available for this date</option>
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-lg btn-primary btn-block submit-form">Submit</button>
                        
                    </form>
                    <hr>
            
                    <p>Go <a href="/">home</a>?</p>
                </div>
            </div>
    </div>
</body>

</html>