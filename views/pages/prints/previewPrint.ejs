<!doctype html>
<html>

<head>
    <%- include ("../../partials/head") %>
    <script src="/public/js/details.js"></script>
    <script type="module" src='/public/js/stldisplay.js'></script>
    <script type="text/javascript" src="/qrcode/qrcode.js"></script>
    <link type="text/css" rel="stylesheet" href="/public/css/details.css">
    <style>
        p strong {
            display: inline-block;
            width: 200px;
        }
    </style>
</head>

<body>
    <%- include ("../../partials/header") %>
    <div class="container mt-5" style="margin-bottom: 100px;">
        
        <%if (print.isPrinted && !print.isPickedUp) {%>
            <div class="row mb-3">
                <div class="col">
                    <button data-toggle="modal" data-target=".modal" data-backdrop="static" data-keyboard="false" fileName="<%=print.realFileName%>" fileID="<%=print._id%>" class="shadow btn btn-lg btn-primary btn-block modal-button">Picking Up</button>
                </div>
                
            </div>
        <%}%>
        <div class="row">
            
            <div class="col-6">
                <div class="shadow card mb-3">
                    <div class="card-img-top">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0"
                                aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div id="model-container">
                            <div id="loading-image"></div>
							<div id="gui-container"></div>
                            <div id="model" filename='<%=print.fileName%>' style="width: 100%; height: 500px"></div>
                        </div>
                    </div>
                        <% if (print.canBeReviewed) { %>
                            <div class="card-body">
                                <h6>Notes from Patron</h6>
                                <%if (print.notes == "") { %>
                                    <p class="mb-0">Patron left no notes</p>
                                <% }  else { %>
                                    <p class="mb-0"><%=print.notes%></p>
                                <%}%>
                            </div>
                </div>
                            <%- include ("../../partials/PrintDetails/patron", {print:print}) %>
                            <%- include ("../../partials/PrintDetails/request", {print:print}) %>
                        <% } else { %>
                            <div class="card-body">
                                <h6>Notes from Patron</h6>
                                <%if (print.notes == "") { %>
                                    <p>Patron left no notes</p>
                                <% }  else { %>
                                    <p><%=print.notes%></p>
                                <%}%>
                                <hr>
                                <h6>Notes to Patron</h6>
                                <p><%=print.patronNotes%></p>
                                <hr>
                                <h6>Technician Notes</h6>
                                <p style="white-space: pre-wrap;"><%=print.techNotes%></p>
                                <p><%= print.overrideNotes%></p>
                                <form action="/prints/appendNotes" method="post">
                                    <div class="hiddenExtras" style="display: none;">
                                        <input type="text" name="fileID" value='<%= print._id%>'>
                                        <input type="text" name="name" value='<%= name%>'>
                                    </div>
                                    <div class="form-group">
                                        <textarea class="form-control" name="newNotes" rows="3" placeholder="Add new technician notes here"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-success">Append</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <% } %>
                
                
            </div>

            <div class="col-6">
                    <% if (print.canBeReviewed) { %>
                        <%if (print.isReviewed) {%>
                            <%- include ("../../partials/PrintDetails/review", {print:print}) %>
                        <%}%>
                        <div class="shadow card">
                            <div class="card-body">
                                <h4>Review Print</h4>
                                <hr>
                                <%- include ("../../partials/PrintDetails/printReviewForm", {print:print}) %>
                            </div>
                        </div>
                    <% } else { %>
                        <%if (print.isPrinted) {%>
                            <%- include ("../../partials/PrintDetails/contact", {print:print}) %>
                            <%- include ("../../partials/PrintDetails/patron", {print:print}) %>
                            <%- include ("../../partials/PrintDetails/request", {print:print}) %>
                            <%- include ("../../partials/PrintDetails/review", {print:print}) %>
                        <%} else { %>
                            <%if (!print.isRejected) {%>
                                <% if (print.isPaid) {%>
                                    <%- include ("../../partials/PrintDetails/status", {print:print}) %>
                                <%}%>
                                <%- include ("../../partials/PrintDetails/review", {print:print}) %>
                                <%- include ("../../partials/PrintDetails/patron", {print:print}) %>
                                <%- include ("../../partials/PrintDetails/request", {print:print}) %>
                            <%} else {%>
                                <%- include ("../../partials/PrintDetails/review", {print:print}) %>
                                <%- include ("../../partials/PrintDetails/patron", {print:print}) %>
                                <%- include ("../../partials/PrintDetails/request", {print:print}) %>
                            <%}%>
                        <%}%>
                    <% } %>
            </div>
		</div>
		
    </div>

    <div class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body" >
				<div class="asklocation">
					<button class="btn btn-lg btn-primary connect-button" location="willis">WILLIS</button>
					<button class="btn btn-lg btn-primary connect-button" location="dp">Discovery Park</button>
				</div>
				<div class="nopad" style="display: none;">
					<h2>Please Connect A Signature Pad!</h2>
					<p>Use an iPad and navigate to sparkorders.library.unt.edu/signature to get started.</p>
				</div>
				<div class="asksig" style="display: none;">
					<h2>Please Do Not Close This Window</h2>
					<p>Ask the patron to sign on the iPad in front of them.</p>
				</div>
				<div class="verify" style="display: none;">
					<h2>Verify Your Credentials</h2>
					<p>Please confirm your password below. By confirming your password you are signing as a witness that the patron has picked up their print.</p>
					<form class="verification" >
					<div class="form-group">
                            <label class="sr-only">EUID</label>
                            <input
                                type="text"
                                class="form-control"
                                name="euid"
                                placeholder="EUID"
                            />
                        </div>
                        <div class="form-group">
                            <label class="sr-only">Password</label>
                            <input
                                type="password"
                                class="form-control"
                                name="password"
                                placeholder="Password"
                            />
                        </div>

                        <button
                            type="submit"
                            class="btn btn-lg btn-primary btn-block verification-button"
                        >
                            Submit
                        </button>
				</form>
				</div>
			</div>
          </div>
		</div>
		
	</div>
	<%- include ("../../partials/footer") %>
</body>

</html>