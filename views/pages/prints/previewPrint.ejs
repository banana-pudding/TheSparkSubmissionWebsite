<!DOCTYPE html>
<html>
    <head>
        <%- include ("../../partials/head") %>
        <script src="/public/js/details.js"></script>
        <script type="module" src="/public/js/stldisplay.js"></script>
        <script type="text/javascript" src="/qrcode/qrcode.js"></script>
        <link type="text/css" rel="stylesheet" href="/public/css/details.css" />
        <!--
        <style>
            p strong {
                width: 12rem;
                float: left;
                clear: right;
            }

            span.data {
                width: calc(100% - 12rem);
                float: right;
            }

            p {
                clear: both;
                overflow: auto;
            }
        </style>-->
    </head>

    <body>
        <%- include ("../../partials/header") %>
        <div class="container-flush mx-5 mt-5" style="margin-bottom: 100px">
            <%if (print.isPrinted && !print.isPickedUp) {%>
            <div class="row mb-3">
                <div class="col">
                    <button
                        data-toggle="modal"
                        data-target=".modal"
                        data-backdrop="static"
                        data-keyboard="false"
                        fileName="<%=print.realFileName%>"
                        fileID="<%=print._id%>"
                        class="shadow btn btn-lg btn-primary btn-block modal-button"
                    >
                        Picking Up
                    </button>
                </div>
            </div>
            <%}%>
            <div class="row">
                <div class="col-xl-4 col-lg-6 col-md-12">
                    <%- include ("../../partials/PrintDetails/patron",
                    {print:print, submission:submission}) %>
                    <div class="shadow card mb-3">
                        <div class="card-img-top">
                            <div class="progress">
                                <div
                                    class="progress-bar"
                                    role="progressbar"
                                    style="width: 0%"
                                    aria-valuenow="0"
                                    aria-valuemin="0"
                                    aria-valuemax="100"
                                ></div>
                            </div>
                            <div id="model-container">
                                <div id="loading-image"></div>
                                <div id="gui-container"></div>
                                <div
                                    id="model"
                                    filename="<%=filePath%>"
                                    style="width: 100%; height: 500px"
                                ></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12">
                    <!-- prettier-ignore -->
                    <%- include ("../../partials/PrintDetails/requestAndReview", {print:print, filePath:filePath, gcodePath:gcodePath}) %> 
                    <%if (print.isNewSubmission ) {%> 
                        <%- include ("../../partials/PrintDetails/internalNotes", {print:print, file:gcodePath}) %> 
                    <%}%>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12">
                    <!-- prettier-ignore -->
                    <%if(isSuperAdmin && print.isPendingWaive) {%> 
                        <%- include ("../../partials/PrintDetails/waiveCard", {print:print}) %> 
                    <%}%> 
                    <% if (print.canBeReviewed) { %>
                    <div class="shadow card">
                        <div class="card-body">
                            <h4>Review Print</h4>
                            <hr />
                            <%- include
                            ("../../partials/PrintDetails/printReviewForm",
                            {print:print}) %>
                        </div>
                    </div>
                    <!-- prettier-ignore -->
                    <% } else { %> 
                        <%if (print.isPrinted) {%> 
                            <%- include ("../../partials/PrintDetails/contact", {print:print}) %> 
                            <%- include ("../../partials/PrintDetails/internalNotes", {print:print, file:gcodePath}) %> 
                        <%} else { %> 
                            <%if (!print.isRejected) {%> 
                                <% if (print.isPaid) {%> 
                                    <%- include ("../../partials/PrintDetails/status", {print:print}) %> 
                                <%}%> 
                                <%- include ("../../partials/PrintDetails/internalNotes", {print:print, file:gcodePath}) %> 
                            <%} else {%> 
                                <%- include ("../../partials/PrintDetails/internalNotes", {print:print, file:gcodePath}) %> 
                                <%- include ("../../partials/PrintDetails/patron", {print:print}) %> 
                                <%- include ("../../partials/PrintDetails/requestAndReview", {print:print, file:filePath}) %> 
                            <%}%> 
                        <%}%> 
                    <% } %>
                </div>
            </div>
        </div>

        <div class="modal fade" tabindex="-1" role="dialog">
            <div
                class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg"
            >
                <div class="modal-content">
                    <div class="modal-header">
                        <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close"
                        >
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="asklocation">
                            <h1 class="display-4">Ready for Pickup?</h1>
                            <p class="lead">
                                Check the patron's ID card and get an iPad ready
                                for them to sign on!
                            </p>
                            <div class="row my-3">
                                <div class="col-7">
                                    <h4>Check the patron's ID</h4>
                                    <p>
                                        Next, you'll be directing them to an
                                        iPad to complete a digital signature.
                                        Have the iPad connected to the
                                        appropriate URL for the location the
                                        print is being picked up at. For willis,
                                        this is
                                        <a href="/signaturewillis"
                                            >sparkorders.library.unt.edu/signaturewillis</a
                                        >
                                        and for Discovery Park this is
                                        <a href="/signaturedp"
                                            >sparkorders.library.unt.edu/signaturedp</a
                                        >
                                    </p>
                                </div>
                                <div class="col-5">
                                    <img
                                        src="/public/images/id.jpg"
                                        style="width: 100%; height: auto"
                                    />
                                </div>
                            </div>
                            <h4>Select your current location:</h4>
                            <div class="row">
                                <div class="col">
                                    <button
                                        class="btn btn-lg btn-primary connect-button"
                                        style="width: 100%"
                                        location="willis"
                                    >
                                        Willis Library
                                    </button>
                                </div>
                                <div class="col">
                                    <button
                                        class="btn btn-lg btn-primary connect-button"
                                        style="width: 100%"
                                        location="dp"
                                    >
                                        Discovery Park
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="nopad" style="display: none">
                            <h1 class="display-4">
                                Please Connect a Signature Pad!
                            </h1>
                            <p class="lead">
                                Use an iPad and navigate to
                                <a href="/signaturewillis"
                                    >sparkorders.library.unt.edu/signaturewillis</a
                                >
                                or
                                <a href="/signaturedp"
                                    >sparkorders.library.unt.edu/signaturedp</a
                                >
                                to get started.
                            </p>
                            <p>
                                In the future, these links will be pinned on the
                                home screen of all our iPads for easy access.
                                For now we must suffer.
                            </p>
                        </div>
                        <div class="asksig" style="display: none">
                            <h1 class="display-4">
                                Please Do Not Close This Window!
                            </h1>
                            <p class="lead">
                                Ask the patron to sign on the iPad in front of
                                them.
                            </p>
                        </div>
                        <div class="verify" style="display: none">
                            <h1 class="display-4">Verify Your Credentials</h1>
                            <p class="lead">
                                Please confirm your password below. By
                                confirming your password you are signing as a
                                witness that the patron has picked up their
                                print.
                            </p>
                            <form class="verification">
                                <div class="form-group">
                                    <label class="sr-only">EUID</label>
                                    <input
                                        type="text"
                                        class="form-control"
                                        name="euid"
                                        placeholder="EUID"
                                    />
                                </div>
                                <div class="form-group">
                                    <label class="sr-only">Password</label>
                                    <input
                                        type="password"
                                        class="form-control"
                                        name="password"
                                        placeholder="Password"
                                    />
                                </div>

                                <button
                                    type="submit"
                                    class="btn btn-lg btn-primary btn-block verification-button"
                                >
                                    Submit
                                </button>
                            </form>
                            <div
                                class="alert alert-danger wrong-password"
                                role="alert"
                                style="display: none"
                            >
                                That didn't work. Try again?
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include ("../../partials/footer") %>
    </body>
</html>
