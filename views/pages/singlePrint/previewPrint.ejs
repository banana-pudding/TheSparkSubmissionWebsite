<!DOCTYPE html>
<html>
    <head>
        <%- include ("../../partials/head") %>
        <script src="/public/js/details.js"></script>
        <script type="module" src="/public/js/stldisplay.js"></script>
        <link type="text/css" rel="stylesheet" href="/public/css/details.css" />
        <style>
            .timeline-col .bi {
                width: 2rem;
                height: 2rem;
                vertical-align: baseline;
            }

            .bi-plus-circle {
                color: #007bff;
            }

            .bi-check-circle {
                color: #28a745;
            }

            .bi-clock {
                color: #ffc107;
            }

            .bi-circle {
                color: #aaa;
            }

            .timeline-col {
                min-width: 8.5em;
            }

            .sep {
                width: 0px;
                background-color: #aaa;
            }
        </style>
    </head>

    <body>
        <%- include ("../../partials/header") %>
        <div class="container-flush mx-5 mt-4" style="margin-bottom: 100px">
            <%- include ("./timeline", {print:print, submission:submission}) %>

            <div class="row">
                <div class="col-xl-4 col-lg-6 col-md-12">
                    <div class="shadow card mb-3">
                        <div class="card-img-top">
                            <div class="progress" id="progress">
                                <div
                                    class="progress-bar"
                                    id="progress-bar"
                                    role="progressbar"
                                    style="width: 0%"
                                    aria-valuenow="0"
                                    aria-valuemin="0"
                                    aria-valuemax="100"
                                ></div>
                            </div>
                            <div id="model-container">
                                <div id="loading-image"></div>
                                <div id="gui-container"></div>
                                <div
                                    id="model"
                                    filename="<%=filePath%>"
                                    style="width: 100%; height: 500px"
                                ></div>
                            </div>
                        </div>
                    </div>

                    <%- include ("./patron", {print:print,
                    submission:submission}) %>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12">
                    <!-- prettier-ignore -->

                    <% if (print.timestampPaymentRequested < new Date("1980") && print.timestampPaid > new Date("1980")) {%> 
                        <%- include ("./printAttempts", {print:print, attempts: attempts}) %> 
                    <%}%>

                    <%- include ("./requestAndReview", {print:print, filePath:filePath, gcodePath:gcodePath}) %> 
                    
                    <% if (print.timestampPaymentRequested < new Date("1980")) { %>
                        <%- include ("./internalNotes", {print:print, file:gcodePath}) %> 
                    <%}%>
                </div>

                <div class="col-xl-4 col-lg-6 col-md-12">
                    <!-- prettier-ignore -->
                    <%if(isSuperAdmin && print.isPendingWaive) {%> 
                        <%- include ("./waiveCard", {print:print}) %> 
                    <%}%>
                    
                    <% if (print.timestampPaymentRequested > new Date("1980") && print.timestampPaid > new Date("1980")) {%> 
                        <%- include ("./printAttempts", {print:print, attempts: attempts}) %> 
                    <%}%>

                    <!-- prettier-ignore -->
                    <% if (print.timestampPaymentRequested < new Date("1980")) { %>
                    <div class="shadow card">
                        <div class="card-body">
                            <h4>Review Print</h4>
                            <%if (print.isReviewed) {%>
                            <p class="mb-0">
                                Previous review by <%= print.approvedBy%>
                            </p>
                            <%}%>
                            <hr />
                            <%- include ("./printReviewForm", {print:print}) %>
                        </div>
                    </div>
                    <% } %>
                    <!-- prettier-ignore -->

                    <% if (print.timestampPaymentRequested > new Date("1980")) { %>
                        <%- include ("./internalNotes", {print:print, file:gcodePath}) %> 
                    <%}%>
                </div>
            </div>
        </div>

        <%- include ("./pickupModal") %>
        <div
            class="modal fade"
            id="modalPrintFinish"
            tabindex="-1"
            role="dialog"
        >
            <div
                class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
            >
                <div class="modal-content">
                    <div class="modal-header">
                        <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close"
                        >
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <%- include ("../../partials/footer") %>
    </body>
</html>
