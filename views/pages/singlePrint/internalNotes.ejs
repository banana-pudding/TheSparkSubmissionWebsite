<div class="card shadow">
    <div class="card-body">
        <h4>Technician Notes</h4>
        <p class="small text-muted"><%= print.review.overrideNotes%></p>
        <%for (var thisTechNote of print.review.internalNotes) {%>
        <p class="mb-0"><%=thisTechNote.notes%></p>
        <p class="small text-muted">
            <%=thisTechNote.techName%> -
            <%=thisTechNote.dateAdded.toLocaleString()%>
        </p>
        <%}%>

        <form action="/prints/appendNotes" method="post">
            <div class="hiddenExtras" style="display: none">
                <input type="text" name="fileID" value="<%= print._id%>" />
                <input type="text" name="name" value="<%= name%>" />
            </div>
            <div class="form-group">
                <textarea
                    class="form-control"
                    name="newNotes"
                    rows="3"
                    placeholder="Add new technician notes here"
                ></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success">Append</button>
            </div>
        </form>
    </div>
</div>
