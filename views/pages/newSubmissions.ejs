<!doctype html>
<html>

<head>
    <%- include ("../partials/head") %>
    <style>
      .container div {
        overflow: hidden;
      }
    </style>
</head>

<body>
    <%- include ("../partials/header") %>
    <div class="container">
      <%dbdata.forEach(function (item) {%>
        <div class="row">
          <div class="col-1">
            <%= item.patron.fname %> <%= item.patron.lname %>
          </div>
          <div class="col-1">
            <%= Date(item.dateSubmitted).toString() %>
          </div>
          <div class="col-10">
                <% item.files.forEach(function (file) {%>
                <div class="row">
                  <div class="col-2"><%= (file.fileName).substring(file.fileName.lastIndexOf("%$%$%") + 5) %></div>
                  <div class="col-1"><%= file.material %></div>
                  <div class="col-1"><%= file.infill %></div>
                  <div class="col-1"><%= file.color %></div>
                  <div class="col-1"><%= file.copies %></div>
                  <div class="col-2">
                    <button type="button" class="btn btn-success download-btn" id='<%= file.fileName%>'>Download</button>
                  </div>
                  <div class="col-2">
                    <button type="button" class="btn btn-primary preview-btn" id='<%= file._id%>'>Preview</button>
                  </div>
                  <div class="col-2">
                    <button type="button" class="btn btn-danger delete-btn" id='<%= file._id%>'>Delete</button>
                  </div>
                </div>
              <%})%>
          </div>
        </div>
      <%})%>
    </div>
        
    <script src="js/prints.js"></script>
</body>

</html>