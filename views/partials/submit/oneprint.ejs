<div class="form-group single-print">
    <div class="form-group row">
        <div class="custom-file" id="customFile" lang="es">
            <input
                name="uploadedFile"
                type="file"
                class="custom-file-input"
                id="exampleInputFile"
                aria-describedby="fileHelp"
                data-container="body"
                data-toggle="popover"
                data-placement="right"
                data-trigger="focus"
                data-content="File must be an STL!"
                required
            />
            <label class="custom-file-label" for="exampleInputFile">
                Select file...
            </label>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-3">Material</label>
        <select name="material" class="form-control col-sm-9 top" required>
            <option value="Any Material">Any Material</option>
            <option value="PLA">PLA</option>
            <option value="ABS">ABS</option>
            <option value="Other">Other (requires prior approval)</option>
        </select>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-3">Infill</label>
        <input
            name="infill"
            type="text"
            class="form-control col-sm-9 inner"
            value="12.5%"
            required
        />
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-3">Color</label>
        <input
            name="color"
            type="text"
            class="form-control col-sm-9 inner"
            value="Any Color"
            required
        />
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-3">Copies</label>
        <input
            name="copies"
            type="number"
            class="form-control col-sm-9 inner"
            value="1"
            required
        />
    </div>

    <div class="form-group row contains-select">
        <label class="col-form-label col-sm-3">Pickup at</label>
        <select name="pickup" class="form-control col-sm-9 inner" required>
            <option value="Willis Library">Willis Library</option>
            <option value="Discovery Park">Discovery Park</option>
        </select>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-3" for="notes"
            >Additional Notes</label
        >
        <textarea
            name="notes"
            class="form-control col-sm-9 bottom"
            rows="3"
            placeholder="Any extra requests or information? If you're unsure if your model is sized correctly, this is a good place to give us specific dimensions so we can scale your file accordingly."
        ></textarea>
    </div>

    <hr />
</div>
