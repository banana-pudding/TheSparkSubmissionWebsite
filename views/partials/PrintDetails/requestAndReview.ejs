<div class="shadow card mb-3">
    <div class="card-body">
        <div class="row row-cols-4">
            <div class="col-12">
                <h3>
                    <a
                        href='<%="/prints/download?fileID=" +  print.fileName.replace("#", "%23")%>'
                        ><%=print.realFileName%></a
                    >
                </h3>
                <p class="lead">
                    Pickup at: <strong><%=print.pickupLocation%></strong>
                </p>
                <p>"<%=print.notes%>"</p>
            </div>
            <div class="col">
                <h5>Color</h5>
                <%=print.color%>
            </div>
            <div class="col">
                <h5>Material</h5>
                <%=print.material%>
            </div>
            <div class="col">
                <h5>Infill</h5>
                <%=print.infill%>
            </div>
            <div class="col">
                <h5>Copies</h5>
                <%=print.copies%>
            </div>
            <% if (print.isReviewed && !print.isRejected) {%>
            <div class="col-12">
                <hr />
            </div>

            <div class="col col-12">
                <h4>
                    Approved by <%=print.approvedBy%> on
                    <%=print.timestampReviewed.toLocaleDateString('en-US');%>
                </h4>
                <p>"<%=print.patronNotes%>"</p>
            </div>
            <div class="col-12">
                <h5>
                    <a
                        href='<%="/prints/download?fileID=" +  print.fileName.replace("#", "%23")%>'
                        ><%=print.realGcodeName%></a
                    >
                </h5>
                <!-- prettier-ignore -->
                <p class="lead">
                    
                    This GCODE file contains <%= print.estimations.slicedCopies%> copies of this object!
                </p>
            </div>
            <div class="col">
                <h5>Printer</h5>
                <%=print.slicedPrinter%>
            </div>
            <div class="col">
                <h5>Material</h5>
                <%=print.slicedMaterial%>
            </div>
            <div class="col">
                <h5>Time</h5>
                <%=print.timeHours%>h <%=print.timeMinutes%>m
            </div>
            <div class="col">
                <h5>Weight</h5>
                <%=print.grams%>g
            </div>
            <div class="col-6"></div>
            <div class="col-6">
                <p class="small text-muted mb-0">
                    These estimates are for <%= print.estimations.slicedCopies%>
                    copies
                </p>
            </div>

            <div class="col-12">
                <hr />
            </div>

            <div class="col-6">
                <h5>Total Print Time</h5>
                <%=print.estimations.totalHours%> hours
                <%=print.estimations.totalMinutes%> minutes
            </div>
            <div class="col-6">
                <h5>Total Print Weight</h5>
                <%=print.estimations.totalGrams%> grams
            </div>
            <%}%>
        </div>
    </div>
</div>
