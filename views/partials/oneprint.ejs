<div class="form-group single-print">
  <div class="form-group row">
    <div class="custom-file" id="customFile" lang="es">
      <input name="file" type="file" class="custom-file-input" id="exampleInputFile" aria-describedby="fileHelp" required>
      <label class="custom-file-label" for="exampleInputFile">
        Select file...
      </label>
    </div>
  </div>

  <div class="row first-row">
    <label class="col-form-label col-sm-3">Material</label>
    <select name="material" class="form-control col-sm-9" required>
      <option value="pla">PLA</option>
      <option value="abs">ABS</option>
      <option value="abs">No preference</option>
      <option value="other">Other (requires prior approval)</option>
    </select>

  </div>

  <div class="row middle-row">
    <label class="col-form-label col-sm-3">Infill</label>
    <input name="infill" type="text" class="form-control col-sm-9" name="infill" placeholder="12.5%" required>
  </div>

  <div class="row last-row">
    <label class="col-form-label col-sm-3">Color</label>
    <input name="color" type="text" class="form-control col-sm-9" name="color" placeholder="No preference" required>
  </div>

  <hr>

</div>